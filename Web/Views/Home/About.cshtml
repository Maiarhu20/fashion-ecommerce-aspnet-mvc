    var lightColor = "#f9e8e9";
}

<div class="about-us-page">
    <!-- Hero Section -->
    <section class="hero-section py-5" style="background: linear-gradient(135deg, @primaryColor 0%, #7a1c47 100%);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 font-weight-bold text-white mb-4">Our Story of Elegance</h1>
                    <p class="lead text-light mb-4">
                        Crafting timeless elegance through premium scarves that blend luxury, comfort, and artistry.
                    </p>
                    <a href="@Url.Action("AllProducts", "Products")" class="btn btn-light btn-lg" style="color: @primaryColor;">
                        <i class="fas fa-scarf mr-2"></i> Explore Collection
                    </a>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image-wrapper">
                        <img src="~/images/aboutus2-image.jpg" alt="La Bella Scarves Collection" class="img-fluid rounded shadow-lg"
