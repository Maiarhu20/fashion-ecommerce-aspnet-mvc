<!-- Custom Policy JavaScript -->
<script>
    $(document).ready(function() {
        // Use a more specific namespace to avoid conflicts
        $('.policy-header').off('click.policyToggle').on('click.policyToggle', function(e) {
            var $this = $(this);
            var targetId = $this.attr('data-target');
            var $target = $(targetId);
            var $arrow = $this.find('.policy-arrow');

            // Use Bootstrap's built-in toggle
            $target.collapse('toggle');

            // Handle arrow rotation after a short delay
            setTimeout(function() {
                if ($target.hasClass('show')) {
                    $arrow.css('transform', 'rotate(180deg)');
                } else {
                    $arrow.css('transform', 'rotate(0deg)');
                }
            }, 50);

            // Prevent any other click handlers
            e.stopPropagation();
        });

        // Listen to Bootstrap collapse events for arrow sync
        $('.policy-content').on('shown.bs.collapse', function() {
            var $arrow = $('[data-target="#' + this.id + '"]').find('.policy-arrow');
            $arrow.css('transform', 'rotate(180deg)');
        });

        $('.policy-content').on('hidden.bs.collapse', function() {
            var $arrow = $('[data-target="#' + this.id + '"]').find('.policy-arrow');
            $arrow.css('transform', 'rotate(0deg)');
        });
    });
</script>

