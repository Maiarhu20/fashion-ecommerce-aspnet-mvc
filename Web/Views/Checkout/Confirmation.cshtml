        padding: 15px 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
        font-size: 1rem;
    }

        .bank-header i {
            font-size: 1.3rem;
        }

    .bank-details {
        padding: 20px;
    }

    .bank-detail-row {
        display: flex;
        flex-direction: column;
        gap: 5px;
        padding: 15px;
        background: var(--gray-100);
        border-radius: 8px;
        margin-bottom: 12px;
    }

        .bank-detail-row:last-child {
            margin-bottom: 0;
        }

    .bank-label {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--gray-600);
        font-size: 0.9rem;
    }

        .bank-label i {
            color: var(--primary);
            width: 20px;
        }

    .bank-value {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 5px;
    }

        .bank-value strong {
            font-size: 1.2rem;
            color: #333;
            letter-spacing: 1px;
        }

        .bank-value .account-number {
            font-family: 'Courier New', monospace;
            font-size: 1.4rem;
