        --primary: #912356;
        --primary-dark: #7a1d47;
        --primary-light: #f9e8e9;
        --success: #28a745;
        --warning: #ffc107;
        --danger: #dc3545;
        --gray-100: #f8f9fa;
        --gray-200: #e9ecef;
        --gray-600: #6c757d;
        --white: #ffffff;
        --shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        --radius: 12px;
    }

    .confirmation-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px 15px 40px;
    }

    /* Success Header */
    .success-header {
        text-align: center;
        padding: 40px 20px;
