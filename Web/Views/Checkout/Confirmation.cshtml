        }

    .instruction-section.arabic {
        direction: rtl;
        text-align: right;
    }

        .instruction-section.arabic ol {
            padding-left: 0;
            padding-right: 20px;
        }

    .instruction-divider {
        height: 1px;
        background: linear-gradient(to right, transparent, var(--gray-200), transparent);
        margin: 20px 0;
    }

    .deposit-action {
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-whatsapp {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 16px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        background: #25d366;
        color: var(--white);
        border: none;
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
        width: 100%;
        max-width: 400px;
    }

        .btn-whatsapp:hover {
            background: #1da851;
            color: var(--white);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(37, 211, 102, 0.3);
        }

    .whatsapp-note {
        margin-top: 10px;
        color: var(--gray-600);
        font-size: 0.9rem;
    }

    .deposit-warning-note {
        background: #fff3cd;
