    }

    .card-header-custom {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        color: var(--white);
        padding: 15px 20px;
    }

        .card-header-custom h5 {
            margin: 0;
            font-size: 1.1rem;
            font-weight: 600;
        }

    .card-body-custom {
        padding: 20px;
    }

    .detail-title {
        color: var(--primary);
        font-weight: 600;
        margin-bottom: 15px;
