@model Core.DTOs.Checkout.OrderConfirmationDto
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var primaryColor = "#912356";
    var isCOD = Model.PaymentMethod == Domain.Models.PaymentMethod.CashOnDelivery;
    var depositAmount = Model.GrandTotal * 0.5m;
    var depositAccountNumber = "***********";
    var depositAccountName = "#####";
    var whatsappNumber = "************";
    var whatsappMessage = $"Hello, I want to send my deposit screenshot for Order #{Model.OrderNumber}. Deposit Amount: EGP {depositAmount:N2}";
    var whatsappUrl = $"https://wa.me/{whatsappNumber}?text={Uri.EscapeDataString(whatsappMessage)}";
}

<div class="confirmation-container">
    <!-- Success Header -->
    <div class="success-header">
        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>
        <h1>Order Confirmed!</h1>
        <p class="order-number">Order #@Model.OrderNumber</p>
    </div>

    <!-- COD Deposit Required Card -->
    @if (isCOD)
    {
        <div class="deposit-card">
            <div class="deposit-header">
                <div class="deposit-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h3>⚠️ Deposit Required / مطلوب عربون</h3>
            </div>
            <div class="deposit-body">
                <!-- Deposit Amount Box -->
                <div class="deposit-amount-box">
                    <div class="amount-label">Deposit Amount (50%) / قيمة العربون</div>
                    <div class="amount-value">EGP @depositAmount.ToString("N2")</div>
                    <div class="amount-arabic">@depositAmount.ToString("N2") جنيه مصري</div>
                </div>

                <!-- Bank Account Details -->
                <div class="bank-account-card">
                    <div class="bank-header">
                        <i class="fas fa-university"></i>
                        <span>Transfer Deposit To / حول العربون إلى</span>
                    </div>
                    <div class="bank-details">
                        <div class="bank-detail-row">
                            <div class="bank-label">
                                <i class="fas fa-user"></i>
                                <span>Account Name / اسم الحساب:</span>
                            </div>
                            <div class="bank-value">
                                <strong>@depositAccountName</strong>
                                <button class="copy-btn" onclick="copyToClipboard('@depositAccountName', this)" title="Copy">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>
                        <div class="bank-detail-row">
                            <div class="bank-label">
                                <i class="fas fa-mobile-alt"></i>
                                <span>Account Number / رقم الحساب:</span>
                            </div>
                            <div class="bank-value">
                                <strong class="account-number">@depositAccountNumber</strong>
                                <button class="copy-btn" onclick="copyToClipboard('@depositAccountNumber', this)" title="Copy">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>
                        <div class="bank-detail-row">
                            <div class="bank-label">
                                <i class="fas fa-money-bill-wave"></i>
                                <span>Amount / المبلغ:</span>
                            </div>
                            <div class="bank-value">
                                <strong class="deposit-highlight">EGP @depositAmount.ToString("N2")</strong>
                                <button class="copy-btn" onclick="copyToClipboard('@depositAmount.ToString("N2")', this)" title="Copy">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="bank-note">
                        <i class="fas fa-info-circle"></i>
                        <span>
                            You can transfer via Instapay, Vodafone Cash, or any bank transfer
                            <br>
                            يمكنك التحويل عبر انستاباي أو فودافون كاش أو أي تحويل بنكي
                        </span>
                    </div>
                </div>

                <!-- Instructions -->
                <div class="deposit-instructions">
                    <div class="instruction-section english">
                        <h5><i class="fas fa-info-circle me-2"></i>Important Instructions:</h5>
                        <ol>
                            <li>Your order <strong>will NOT be processed</strong> until we receive the 50% deposit.</li>
                            <li>Transfer <strong>EGP @depositAmount.ToString("N2")</strong> to account: <strong>@depositAccountNumber</strong> (Heba Sabry)</li>
                            <li>Take a screenshot of the payment confirmation.</li>
                            <li>Send the screenshot via WhatsApp using the button below.</li>
                            <li>Once we verify your deposit, we will start processing your order.</li>
                        </ol>
                    </div>

                    <div class="instruction-divider"></div>

                    <div class="instruction-section arabic">
                        <h5><i class="fas fa-info-circle ms-2"></i>تعليمات هامة:</h5>
                        <ol>
                            <li>لن يتم معالجة طلبك <strong>حتى نستلم العربون (50%)</strong>.</li>
                            <li>حول <strong>@depositAmount.ToString("N2") جنيه</strong> إلى حساب: <strong>@depositAccountNumber</strong> (هبة صبري)</li>
                            <li>قم بأخذ لقطة شاشة لتأكيد الدفع.</li>
                            <li>أرسل لقطة الشاشة عبر الواتساب باستخدام الزر أدناه.</li>
                            <li>بمجرد التحقق من العربون، سنبدأ في معالجة طلبك.</li>
                        </ol>
                    </div>
                </div>

                <!-- WhatsApp Button -->
                <div class="deposit-action">
                    <a href="@whatsappUrl" target="_blank" class="btn-whatsapp">
                        <i class="fab fa-whatsapp me-2"></i>
                        Send Deposit Screenshot / أرسل صورة العربون
                    </a>
                    <p class="whatsapp-note">
                        <i class="fas fa-phone-alt me-1"></i>
                        WhatsApp: +20 @whatsappNumber.Substring(2, 3) @whatsappNumber.Substring(5, 4) @whatsappNumber.Substring(9)
                    </p>
                </div>

                <!-- Warning Note -->
                <div class="deposit-warning-note">
                    <i class="fas fa-clock me-2"></i>
                    <span>
                        <strong>Note:</strong> Orders without deposit confirmation will be automatically cancelled after 24 hours.
                        <br>
                        <strong>ملاحظة:</strong> سيتم إلغاء الطلبات بدون تأكيد العربون تلقائياً بعد 24 ساعة.
                    </span>
                </div>
            </div>
        </div>
    }

    <!-- Main Content -->
    <div class="row g-4">
        <!-- Order Details -->
        <div class="col-lg-8">
            <div class="confirmation-card">
                <div class="card-header-custom">
                    <h5><i class="fas fa-receipt me-2"></i>Order Details</h5>
                </div>
                <div class="card-body-custom">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <h6 class="detail-title">Order Information</h6>
                            <div class="detail-item">
                                <span class="detail-label">Order Date:</span>
                                <span class="detail-value">@Model.OrderDate.ToString("MMMM dd, yyyy h:mm tt")</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Customer Name:</span>
                                <span class="detail-value">@Model.CustomerName</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Phone:</span>
                                <span class="detail-value">@Model.CustomerPhone</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Email:</span>
                                <span class="detail-value">@Model.CustomerEmail</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Payment Method:</span>
                                <span class="detail-value payment-badge @(isCOD ? "cod" : "paid")">
                                    @if (isCOD)
                                    {
                                        <i class="fas fa-money-bill-wave me-1"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-check-circle me-1"></i>
                                    }
                                    @Model.PaymentMethod
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <h6 class="detail-title">Shipping Address</h6>
                            <div class="address-box">
                                <p class="mb-1"><strong>@Model.CustomerName</strong></p>
                                <p class="mb-1">@Model.ShippingAddress</p>
                                <p class="mb-1">@Model.ShippingCity</p>
                                <p class="mb-1">@Model.CustomerPhone</p>
                                <p class="mb-0">@Model.CustomerEmail</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items -->
            <div class="confirmation-card">
                <div class="card-header-custom">
                    <h5><i class="fas fa-shopping-bag me-2"></i>Order Items</h5>
                </div>
                <div class="card-body-custom p-0">
                    <div class="table-responsive">
                        <table class="order-items-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Color</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="product-name">@item.ProductName</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.SelectedColor))
                                            {
                                                <span class="color-badge">@item.SelectedColor</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@item.Quantity</td>
                                        <td>EGP @item.UnitPrice.ToString("N2")</td>
                                        <td class="item-total">EGP @item.LineTotal.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="confirmation-card summary-card">
                <div class="card-header-custom">
                    <h5><i class="fas fa-calculator me-2"></i>Order Summary</h5>
                </div>
                <div class="card-body-custom">
                    <div class="summary-row">
                        <span>Subtotal</span>
                        <span>EGP @Model.CartTotal.ToString("N2")</span>
                    </div>
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="summary-row discount">
                            <span><i class="fas fa-tag me-1"></i>Discount</span>
                            <span>-EGP @Model.DiscountAmount.ToString("N2")</span>
                        </div>
                    }
                    <div class="summary-row">
                        <span><i class="fas fa-truck me-1"></i>Shipping</span>
                        <span>EGP @Model.ShippingCost.ToString("N2")</span>
                    </div>
                    <div class="summary-divider"></div>
                    <div class="summary-row grand-total">
                        <span>Grand Total</span>
                        <span>EGP @Model.GrandTotal.ToString("N2")</span>
                    </div>

                    @if (isCOD)
                    {
                        <div class="summary-divider"></div>
                        <div class="summary-row deposit">
                            <span>💰 Deposit (50%)</span>
                            <span>EGP @depositAmount.ToString("N2")</span>
                        </div>
                        <div class="summary-row remaining">
                            <span>🚚 Pay on Delivery</span>
                            <span>EGP @((Model.GrandTotal - depositAmount).ToString("N2"))</span>
                        </div>
                    }
                </div>
            </div>

            <!-- What's Next -->
            <div class="confirmation-card">
                <div class="card-header-custom">
                    <h5><i class="fas fa-clipboard-list me-2"></i>What's Next?</h5>
                </div>
                <div class="card-body-custom">
                    <ul class="next-steps-list">
                        <li>
                            <i class="fas fa-envelope"></i>
                            <span>You will receive an email confirmation shortly</span>
                        </li>
                        @if (isCOD)
                        {
                            <li class="highlight">
                                <i class="fas fa-hand-holding-usd"></i>
                                <span>Transfer 50% deposit to <strong>@depositAccountNumber</strong> and send screenshot via WhatsApp</span>
                            </li>
                        }
                        <li>
                            <i class="fas fa-shipping-fast"></i>
                            <span>We will contact you when your order ships</span>
                        </li>
                        @if (isCOD)
                        {
                            <li>
                                <i class="fas fa-money-bill-wave"></i>
                                <span>Have the remaining amount (EGP @((Model.GrandTotal - depositAmount).ToString("N2"))) ready on delivery</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="@Url.Action("Index", "Home")" class="btn-primary-custom">
                    <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                </a>
                @* <a href="@Url.Action("Index", "OrderTracking")" class="btn-secondary-custom">
                    <i class="fas fa-search me-2"></i>Track Your Order
                </a> *@
            </div>
        </div>
    </div>
</div>

<!-- Toast for copy notification -->
<div class="copy-toast" id="copyToast">
    <i class="fas fa-check-circle me-2"></i>
    <span>Copied to clipboard!</span>
</div>

