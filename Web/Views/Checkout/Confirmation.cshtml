        }

        .bank-value .deposit-highlight {
            color: var(--primary);
            font-size: 1.3rem;
        }

    .copy-btn {
        background: var(--primary-light);
        border: none;
        padding: 8px 12px;
        border-radius: 6px;
        cursor: pointer;
        color: var(--primary);
        transition: all 0.2s ease;
    }

        .copy-btn:hover {
            background: var(--primary);
            color: var(--white);
        }

        .copy-btn.copied {
            background: var(--success);
            color: var(--white);
        }

    .bank-note {
        background: #e3f2fd;
        padding: 12px 15px;
        display: flex;
        align-items: flex-start;
        gap: 10px;
        font-size: 0.85rem;
        color: #1565c0;
        border-top: 1px solid #bbdefb;
    }

        .bank-note i {
            margin-top: 2px;
        }

    /* Copy Toast */
    .copy-toast {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%) translateY(100px);
        background: var(--success);
        color: var(--white);
        padding: 12px 25px;
        border-radius: 50px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        z-index: 9999;
        opacity: 0;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
    }

        .copy-toast.show {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
        }

