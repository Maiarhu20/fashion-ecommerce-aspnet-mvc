@model Web.Controllers.PaymentPendingViewModel
@{
    ViewData["Title"] = "Payment Pending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .pending-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        padding: 20px 0;
    }

    .pending-card {
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        overflow: hidden;
        border: none;
    }

    .pending-header {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        padding: 30px 20px;
        text-align: center;
        position: relative;
    }

        .pending-header::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 15px solid transparent;
            border-right: 15px solid transparent;
            border-top: 10px solid #ff9800;
        }

    .spinner-custom {
        width: 4rem;
        height: 4rem;
        border-width: 4px;
        animation: spinner-grow 1s linear infinite;
    }

    .order-info-box {
        background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
        border-radius: 12px;
        padding: 20px;
        margin: 20px 0;
        border: 2px solid #ffc107;
    }

    .info-alert {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border-left: 4px solid #2196f3;
        border-radius: 8px;
    }

    .btn-check-status {
        background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
        border: none;
        padding: 14px 30px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(33, 150, 243, 0.3);
    }

        .btn-check-status:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(33, 150, 243, 0.4);
        }

    .btn-return-home {
        border: 2px solid #757575;
        color: #424242;
        padding: 12px 25px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

        .btn-return-home:hover {
            background: #f5f5f5;
            border-color: #424242;
        }

    @@media (max-width: 768px) {
        .pending-container

    {
        padding: 15px 0;
    }

    .pending-header {
        padding: 25px 15px;
    }

        .pending-header h4 {
            font-size: 1.3rem;
        }

    .spinner-custom {
        width: 3rem;
        height: 3rem;
    }

    .order-info-box {
        padding: 15px;
    }

    .btn-check-status,
    .btn-return-home {
        width: 100%;
        margin-bottom: 10px;
    }

    .d-grid {
        gap: 10px !important;
    }

    }

    @@media (max-width: 576px) {
        .pending-header h4

    {
        font-size: 1.1rem;
    }

    .order-info-box p {
        font-size: 0.9rem;
    }

    .info-alert {
        padding: 12px;
    }

        .info-alert h6 {
            font-size: 0.95rem;
        }

        .info-alert ul {
            font-size: 0.85rem;
            padding-left: 20px;
        }

    }
</style>

<div class="container pending-container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-6">
            <div class="card pending-card">
                <div class="pending-header">
                    <h4 class="mb-0 text-dark">
                        <i class="bi bi-hourglass-split me-2"></i>
                        Payment Processing
                    </h4>
                </div>

                <div class="card-body p-4">
                    <div class="text-center py-4">
                        <div class="spinner-border text-warning spinner-custom mb-3" role="status">
                            <span class="visually-hidden">Processing...</span>
                        </div>
                        <h5 class="mb-3">Your payment is being processed</h5>

                        @if (!string.IsNullOrEmpty(Model.OrderNumber) || Model.Amount > 0)
                        {
                            <div class="order-info-box">
                                @if (!string.IsNullOrEmpty(Model.OrderNumber))
                                {
                                    <p class="mb-2">
                                        <span class="text-muted">Order Number:</span><br>
                                        <strong class="fs-5">@Model.OrderNumber</strong>
                                    </p>
                                }
                                @if (Model.Amount > 0)
                                {
                                    <p class="mb-0">
                                        <span class="text-muted">Amount:</span><br>
                                        <strong class="fs-4 text-warning">EGP @Model.Amount.ToString("N2")</strong>
                                    </p>
                                }
                            </div>
                        }
                    </div>

                    <div class="alert info-alert text-start">
                        <h6 class="mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            What happens next?
                        </h6>
                        <ul class="mb-0 small">
                            <li class="mb-2">If you were asked for 3D Secure verification, please complete it</li>
                            <li class="mb-2">You will receive an email confirmation once payment is complete</li>
                            <li>This page will automatically update when payment is verified</li>
                        </ul>
                    </div>

                    <div id="statusMessage" class="mb-3"></div>

                    <div class="d-grid gap-2">
                        <button onclick="checkPaymentStatus()" class="btn btn-primary btn-check-status">
                            <i class="bi bi-arrow-clockwise me-2"></i>Check Payment Status
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="bi bi-house me-2"></i>Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const orderNumber = '@Model.OrderNumber';
        let checkCount = 0;
        const maxChecks = 20;

        async function checkPaymentStatus() {
            const statusDiv = document.getElementById('statusMessage');
            statusDiv.innerHTML = `
                <div class="alert alert-info">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="spinner-border spinner-border-sm me-2"></div>
                        Checking payment status...
                    </div>
                </div>`;

            try {
                const response = await fetch('@Url.Action("CheckPaymentStatus", "Checkout")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ orderNumber: orderNumber })
                });

                const result = await response.json();

                if (result.success) {
                    statusDiv.innerHTML = `
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            Payment confirmed! Redirecting...
                        </div>`;
                    setTimeout(() => window.location.href = result.redirectUrl, 1500);
                } else if (result.pending) {
                    statusDiv.innerHTML = `
                        <div class="alert alert-warning">
                            <i class="bi bi-hourglass me-2"></i>
                            Payment is still being processed. Please wait...
                        </div>`;
                } else {
                    statusDiv.innerHTML = `
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle me-2"></i>
                            ${result.message || 'Payment could not be verified. Please contact support.'}
                        </div>`;
                }
            } catch (error) {
                console.error('Error:', error);
                statusDiv.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Error checking payment status. Please try again.
                    </div>`;
            }
        }

        const autoCheck = setInterval(async function() {
            checkCount++;
            if (checkCount > maxChecks) {
                clearInterval(autoCheck);
                document.getElementById('statusMessage').innerHTML = `
                    <div class="alert alert-warning">
                        <i class="bi bi-clock me-2"></i>
                        Auto-check stopped. Click "Check Payment Status" to manually verify.
                    </div>`;
                return;
            }
            await checkPaymentStatus();
        }, 3000);

        setTimeout(checkPaymentStatus, 1000);
    </script>
    @Html.AntiForgeryToken()
}