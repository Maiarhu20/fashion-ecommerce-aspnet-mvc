@model Core.DTOs.Shipping.CreateShippingCityDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Shipping City";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Add New Shipping City</h1>
        <a href="@Url.Action("ManageCities", "Shipping")" class="btn btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="CreateCity" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CityName" class="form-label">City Name *</label>
                            <input asp-for="CityName" class="form-control" />
                            <span asp-validation-for="CityName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ShippingCost" class="form-label">Shipping Cost (EGP) *</label>
                            <input asp-for="ShippingCost" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="ShippingCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IsActive" class="form-label">Status</label>
                    <div class="form-check form-switch mt-2">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" checked />
                        <label class="form-check-label" asp-for="IsActive">
                            @(Model?.IsActive == true ? "Active" : "Inactive")
                        </label>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary" style="background-color: #912356; border-color: #912356;">
                        <i class="bi bi-check-circle"></i> Create City
                    </button>
                    <a href="@Url.Action("ManageCities", "Shipping")" class="btn btn-secondary ms-2">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Update label text when toggle switch changes
            const isActiveCheckbox = document.getElementById('IsActive');
            const isActiveLabel = document.querySelector('label[for="IsActive"]');

            if (isActiveCheckbox && isActiveLabel) {
                isActiveCheckbox.addEventListener('change', function() {
                    isActiveLabel.textContent = this.checked ? 'Active' : 'Inactive';
                });
            }

            // Format shipping cost input
            const shippingCostInput = document.getElementById('ShippingCost');
            if (shippingCostInput) {
                shippingCostInput.addEventListener('blur', function() {
                    if (this.value) {
                        this.value = parseFloat(this.value).toFixed(2);
                    }
                });
            }
        });
    </script>
}