@model Core.DTOs.Categories.CategoryCreateDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Create New Category</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i>Back to List
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Category Details</h6>
                </div>
                <div class="card-body">
                    <!-- IMPORTANT: Use simple parameter binding instead of model binding -->
                    <form method="post" enctype="multipart/form-data" id="createForm">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label class="control-label font-weight-bold">Category Name *</label>
                            <input type="text" name="Name" id="categoryName" class="form-control" placeholder="Enter category name" required />
                            <span id="nameError" class="text-danger" style="display: none;"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label font-weight-bold">Description</label>
                            <textarea name="Description" id="categoryDescription" class="form-control" rows="4" placeholder="Enter category description"></textarea>
                        </div>

                        <!-- File Upload Section -->
                        <div class="form-group">
                            <label class="control-label font-weight-bold">Category Image *</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="imageFile" name="ImageFile" accept="image/jpeg,image/jpg,image/png,image/gif,image/webp" required>
                                <label class="custom-file-label" for="imageFile" id="fileLabel">Choose image file...</label>
                            </div>
                            <small class="form-text text-muted">
                                Supported formats: JPG, PNG, GIF, WebP. Max size: 5MB.
                            </small>
                            <div id="fileError" class="text-danger small mt-1" style="display: none;"></div>
                        </div>

                        <!-- Image Preview -->
                        <div class="form-group">
                            <label class="control-label font-weight-bold">Image Preview</label>
                            <div id="imagePreview" class="mt-2 text-center" style="display: none;">
                                <img id="previewImage" src="" alt="Preview" class="img-thumbnail" style="max-height: 200px; object-fit: cover;">
                                <div class="mt-2">
                                    <button type="button" id="removeImage" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-times mr-1"></i>Remove Image
                                    </button>
                                </div>
                            </div>
                            <div id="noImagePreview" class="text-center py-4 bg-light rounded">
                                <i class="fas fa-image fa-2x text-gray-400 mb-2"></i>
                                <p class="text-muted mb-0">No image selected</p>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary" style="background-color: #912356; border-color: #912356;" id="submitBtn">
                                <i class="fas fa-save mr-2"></i>Create Category
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ml-2">
                                <i class="fas fa-times mr-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Tips section -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Tips & Guidelines</h6>
                </div>
                <div class="card-body">
                    <div class="info-box bg-light border-left-primary p-3 mb-3" style="border-left: 4px solid #4e73df;">
                        <h6 class="font-weight-bold text-primary mb-2">
                            <i class="fas fa-lightbulb mr-2"></i>Best Practices
                        </h6>
                        <ul class="mb-0 pl-3 text-dark small">
                            <li class="mb-2">Use clear, descriptive category names</li>
                            <li class="mb-2">Add relevant descriptions for SEO</li>
                            <li class="mb-2">Use high-quality images (recommended: 400x400px)</li>
                            <li class="mb-0">Keep category names consistent</li>
                        </ul>
                    </div>

                    <div class="info-box bg-light border-left-warning p-3" style="border-left: 4px solid #f6c23e;">
                        <h6 class="font-weight-bold text-warning mb-2">
                            <i class="fas fa-exclamation-triangle mr-2"></i>Important Notes
                        </h6>
                        <ul class="mb-0 pl-3 text-dark small">
                            <li class="mb-2">Category names must be unique</li>
                            <li class="mb-2">Image is required for all categories</li>
                            <li class="mb-0">Maximum file size is 5MB</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Image Guidelines -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Image Guidelines</h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-image fa-3x text-success mb-2"></i>
                    </div>
                    <ul class="list-unstyled small">
                        <li class="mb-2">
                            <i class="fas fa-check text-success mr-2"></i>
                            <strong>Dimensions:</strong> 400x400px or larger
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success mr-2"></i>
                            <strong>Format:</strong> JPG, PNG, GIF, WebP
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success mr-2"></i>
                            <strong>Size:</strong> Less than 5MB
                        </li>
                        <li class="mb-0">
                            <i class="fas fa-check text-success mr-2"></i>
                            <strong>Style:</strong> Clear, professional images
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const maxFileSize = 5 * 1024 * 1024; // 5MB
        const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];

        // File input change handler
        document.getElementById('imageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const fileError = document.getElementById('fileError');
            const previewContainer = document.getElementById('imagePreview');
            const noPreviewContainer = document.getElementById('noImagePreview');
            const previewImage = document.getElementById('previewImage');
            const fileLabel = document.getElementById('fileLabel');

            // Reset error
            fileError.style.display = 'none';
            fileError.textContent = '';

            if (file) {
                // Update file label
                fileLabel.textContent = file.name;

                // Validate file type
                if (!validTypes.includes(file.type.toLowerCase())) {
                    fileError.textContent = 'Please select a valid image file (JPG, PNG, GIF, WebP).';
                    fileError.style.display = 'block';
                    resetFileInput();
                    return;
                }

                // Validate file size (5MB max)
                if (file.size > maxFileSize) {
                    fileError.textContent = 'File size must be less than 5MB. Current size: ' + (file.size / 1024 / 1024).toFixed(2) + 'MB';
                    fileError.style.display = 'block';
                    resetFileInput();
                    return;
                }

                // Create preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewContainer.style.display = 'block';
                    noPreviewContainer.style.display = 'none';
                };
                reader.onerror = function() {
                    fileError.textContent = 'Error reading file. Please try again.';
                    fileError.style.display = 'block';
                    resetFileInput();
                };
                reader.readAsDataURL(file);
            } else {
                resetFileInput();
            }
        });

        // Remove image handler
        document.getElementById('removeImage').addEventListener('click', function() {
            resetFileInput();
        });

        function resetFileInput() {
            const fileInput = document.getElementById('imageFile');
            const fileLabel = document.getElementById('fileLabel');
            const previewContainer = document.getElementById('imagePreview');
            const noPreviewContainer = document.getElementById('noImagePreview');
            const fileError = document.getElementById('fileError');

            fileInput.value = '';
            fileLabel.textContent = 'Choose image file...';
            previewContainer.style.display = 'none';
            noPreviewContainer.style.display = 'block';
            fileError.style.display = 'none';
        }

        // Form validation before submit
        document.getElementById('createForm').addEventListener('submit', function(e) {
            const fileInput = document.getElementById('imageFile');
            const nameInput = document.getElementById('categoryName');
            const submitBtn = document.getElementById('submitBtn');
            const nameError = document.getElementById('nameError');
            const fileError = document.getElementById('fileError');

            // Reset errors
            nameError.style.display = 'none';
            fileError.style.display = 'none';

            let hasError = false;

            // Validate name
            if (!nameInput.value.trim()) {
                nameError.textContent = 'Please enter a category name.';
                nameError.style.display = 'block';
                nameInput.focus();
                hasError = true;
            }

            // Validate file
            if (!fileInput.files || fileInput.files.length === 0) {
                fileError.textContent = 'Please select an image file.';
                fileError.style.display = 'block';
                if (!hasError) fileInput.focus();
                hasError = true;
            } else {
                const file = fileInput.files[0];

                // Validate file type
                if (!validTypes.includes(file.type.toLowerCase())) {
                    fileError.textContent = 'Please select a valid image file.';
                    fileError.style.display = 'block';
                    hasError = true;
                }

                // Validate file size
                if (file.size > maxFileSize) {
                    fileError.textContent = 'File size must be less than 5MB.';
                    fileError.style.display = 'block';
                    hasError = true;
                }
            }

            if (hasError) {
                e.preventDefault();
                return false;
            }

            // Disable submit button to prevent double submission
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Creating...';

            return true;
        });

        // Initialize
        resetFileInput();
    </script>
}