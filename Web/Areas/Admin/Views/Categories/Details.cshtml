@model Core.DTOs.Categories.CategoryResponseDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Category Details</h1>
        <div>
            @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit mr-2"></i>Edit
            </a> *@
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-2"></i>Back to List
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Category Information</h6>
                    <span class="badge @(Model.IsDeleted ? "badge-danger" : "badge-success")">
                        @(Model.IsDeleted ? "Deleted" : "Active")
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="font-weight-bold text-primary">@Model.Name</h5>
                            <p class="text-muted mb-4">@Model.Description</p>

                            <div class="mb-3">
                                <strong>Product Count:</strong>
                                <span class="badge badge-info badge-pill">@Model.ProductCount products</span>
                            </div>

                            <div class="mb-3">
                                <strong>Created Date:</strong>
                                <span class="text-muted">@Model.CreatedDate.ToString("MMMM dd, yyyy")</span>
                            </div>

                            <div class="mb-3">
                                <strong>Status:</strong>
                                @if (Model.IsDeleted)
                                {
                                    <span class="badge badge-danger">Deleted</span>
                                }
                                else if (Model.ProductCount > 0)
                                {
                                    <span class="badge badge-success">Active with Products</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Active (No Products)</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <div class="text-center">
                                        <i class="fas fa-image fa-3x text-gray-400 mb-2"></i>
                                        <p class="text-muted">No Image</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (!Model.IsDeleted)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-block">
                                <i class="fas fa-edit mr-2"></i>Edit Category
                            </a>

                            @if (Model.ProductCount == 0)
                            {
                                <form asp-action="Delete" method="post" class="d-grid">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-danger btn-block"
                                            onclick="return confirm('Are you sure you want to delete this category?')">
                                        <i class="fas fa-trash mr-2"></i>Delete Category
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger btn-block"
                                        onclick="checkDelete(@Model.Id, '@Model.Name')">
                                    <i class="fas fa-trash mr-2"></i>Delete Category
                                </button>
                                <form asp-action="Archive" method="post" class="d-grid">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-secondary btn-block"
                                            onclick="return confirm('Archive this category? Products will be hidden but order history preserved.')">
                                        <i class="fas fa-archive mr-2"></i>Archive Category
                                    </button>
                                </form>
                            }

                            <!-- Change it to: -->
                            <a asp-action="Index" asp-controller="Products" asp-area="Admin"
                               asp-route-categoryId="@Model.Id" class="btn btn-info btn-block">
                                <i class="fas fa-boxes mr-2"></i>View Products (@Model.ProductCount)
                            </a>
                        }
                        else
                        {
                            <form asp-action="Restore" method="post" class="d-grid">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success btn-block"
                                        onclick="return confirm('Are you sure you want to restore this category?')">
                                    <i class="fas fa-trash-restore mr-2"></i>Restore Category
                                </button>
                            </form>
                        }

                        @* <a asp-action="Index" class="btn btn-outline-secondary btn-block">
                            <i class="fas fa-arrow-left mr-2"></i>Back to List
                        </a> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function checkDelete(categoryId, categoryName) {
            // Similar checkDelete function as in Index view
            fetch(`@Url.Action("CheckDelete")/${categoryId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && !data.canDelete) {
                        let message = `Cannot delete "${categoryName}"\n\n`;
                        message += `Reason: ${data.message}\n`;
                        if (data.blockingReasons && data.blockingReasons.length > 0) {
                            message += '\nBlocking Reasons:\n';
                            data.blockingReasons.forEach(reason => {
                                message += `• ${reason}\n`;
                            });
                        }
                        alert(message);
                    } else if (data.success && data.canDelete) {
                        if (confirm(`Are you sure you want to delete "${categoryName}"?`)) {
                            submitDelete(categoryId);
                        }
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
        }

        function submitDelete(categoryId) {
            // Similar submitDelete function as in Index view
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("Delete")';

            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = token;
            form.appendChild(tokenInput);

            const idInput = document.createElement('input');
            idInput.type = 'hidden';
            idInput.name = 'id';
            idInput.value = categoryId;
            form.appendChild(idInput);

            document.body.appendChild(form);
            form.submit();
        }
    </script>
}