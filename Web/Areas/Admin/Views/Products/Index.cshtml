@model IEnumerable<Core.DTOs.Products.ProductListDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    var isActiveProductsActive = currentAction == "Index" || currentAction == null;
    var isDeletedProductsActive = currentAction == "Deleted";
}

<div class="container-fluid">
    <!-- Page Header - Responsive -->
    <div class="page-header">
        <h1 class="h3 mb-0 text-gray-800">Products Management</h1>
        <a asp-action="Create" class="btn btn-primary btn-create" style="background-color: #912356; border-color: #912356; color:beige">
            <i class="fas fa-plus mr-2"></i>
            <span class="btn-text">Add New Product</span>
        </a>
    </div>

    <!-- Navigation Tabs - Responsive -->
    <div class="nav-tabs-wrapper">
        <div class="tab-buttons">
            <a asp-action="Index" class="btn btn-sm @(isActiveProductsActive ? "btn-tab-active" : "btn-tab-inactive")">
                <i class="fas fa-box mr-1 mr-md-2"></i>
                <span class="tab-text-full">Active Products</span>
                <span class="tab-text-short">Active</span>
            </a>
            <a asp-action="Deleted" class="btn btn-sm @(isDeletedProductsActive ? "btn-tab-active" : "btn-tab-inactive")">
                <i class="fas fa-trash-restore mr-1 mr-md-2"></i>
                <span class="tab-text-full">View Deleted Products</span>
                <span class="tab-text-short">Deleted</span>
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Products Grid -->
    <div class="row mt-4">
        @foreach (var product in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-6 mb-4">
                <div class="card product-item border-0 mb-4 h-100">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        @if (!string.IsNullOrEmpty(product.PrimaryImageUrl))
                        {
                            <img class="img-fluid w-100 h-100" style="object-fit: cover;" src="@product.PrimaryImageUrl" alt="@product.Name">
                        }
                        else
                        {
                            <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light">
                                <i class="fas fa-image fa-2x text-muted"></i>
                            </div>
                        }
                        @if (product.IsDeleted)
                        {
                            <div class="position-absolute deleted-badge">
                                Deleted
                            </div>
                        }
                    </div>
                    <div class="card-body border-left border-right text-center">
                        <h6 class="product-name text-truncate mb-2" title="@product.Name">@product.Name</h6>
                        <p class="text-muted small mb-2 text-truncate category-name">@(product.CategoryName ?? "Uncategorized")</p>

                        <!-- Price Display -->
                        <div class="price-section mb-3">
                            @if (product.DiscountPercent.HasValue && product.DiscountPercent > 0)
                            {
                                <div class="d-flex flex-column align-items-center">
                                    <div class="discount-badge mb-1">
                                        @product.DiscountPercent.Value% OFF
                                    </div>
                                    <div class="final-price text-primary font-weight-bold mb-1">
                                        EGP @FormatPriceCompact(product.FinalPrice)
                                    </div>
                                    <div class="original-price">
                                        <small class="text-muted">
                                            <del>EGP @FormatPriceCompact(product.Price)</del>
                                        </small>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="final-price text-primary font-weight-bold">
                                    EGP @FormatPriceCompact(product.Price)
                                </div>
                            }
                        </div>

                        <!-- Stock & Orders - Compact -->
                        <div class="stats-section mb-3">
                            <div class="d-flex justify-content-around small text-muted">
                                <div class="stat-item d-flex flex-column align-items-center">
                                    <i class="fas fa-box mb-1"></i>
                                    <span class="stat-value">@FormatNumberCompact(product.StockQuantity)</span>
                                </div>
                                <div class="stat-item d-flex flex-column align-items-center">
                                    <i class="fas fa-shopping-cart mb-1"></i>
                                    <span class="stat-value">@FormatNumberCompact(product.OrderCount)</span>
                                </div>
                                <div class="stat-item d-flex flex-column align-items-center">
                                    <i class="fas fa-star mb-1"></i>
                                    <span class="stat-value">@FormatNumberCompact(product.ReviewCount)</span>
                                </div>
                            </div>
                        </div>

                        <!-- Colors - Compact -->
                        @if (product.Colors != null && product.Colors.Any())
                        {
                            <div class="colors-section">
                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                    @foreach (var color in product.Colors.Take(3))
                                    {
                                        <span class="color-dot"
                                              style="background-color: @color.ColorHexCode;"
                                              title="@color.ColorName">
                                        </span>
                                    }
                                    @if (product.Colors.Count > 3)
                                    {
                                        <span class="color-more small text-muted" title="@string.Join(", ", product.Colors.Skip(3).Select(c => c.ColorName))">
                                            +@(product.Colors.Count - 3)
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a asp-area="Admin" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id"
                           class="btn btn-sm text-dark action-btn" title="View Details">
                            <i class="fas fa-eye text-primary"></i>
                            <span class="action-text">View</span>
                        </a>
                        <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id"
                           class="btn btn-sm text-dark action-btn" title="Edit Product">
                            <i class="fas fa-edit text-warning"></i>
                            <span class="action-text">Edit</span>
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-sm text-dark action-btn border-0 bg-transparent"
                                    title="Delete Product"
                                    onclick="return confirm('Are you sure you want to delete this product?')">
                                <i class="fas fa-trash text-danger"></i>
                                <span class="action-text">Delete</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No Products Found</h4>
            <p class="text-muted">Get started by creating your first product.</p>
            <a asp-action="Create" class="btn btn-primary" style="background-color: #912356; border-color: #912356; color:beige">
                <i class="fas fa-plus mr-2"></i>Create First Product
            </a>
        </div>
    }
</div>

@functions {
    private string FormatPriceCompact(decimal price)
    {
        if (price >= 1000)
        {
            return price.ToString("N0");
        }
        else if (price >= 100)
        {
            return price.ToString("N1");
        }
        else
        {
            return price.ToString("N2");
        }
    }

    private string FormatNumberCompact(int number)
    {
        if (number >= 1000000)
        {
            return (number / 1000000.0).ToString("0.0") + "M";
        }
        else if (number >= 1000)
        {
            return (number / 1000.0).ToString("0.0") + "K";
        }
        else
        {
            return number.ToString();
        }
    }
}

