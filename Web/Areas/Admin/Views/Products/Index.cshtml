@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            // Initialize tooltips
            $('[title]').tooltip({
                placement: 'top',
                trigger: 'hover'
            });

            // Handle long price numbers - reduce font size if overflow
            function adjustPrices() {
                $('.final-price').each(function() {
                    var $this = $(this);
                    var textWidth = $this[0].scrollWidth;
                    var containerWidth = $this.parent().width();

                    if (textWidth > containerWidth) {
                        var currentSize = parseFloat($this.css('font-size'));
                        var newSize = currentSize * (containerWidth / textWidth) * 0.9;
                        if (newSize < 10) newSize = 10; // Minimum size
                        $this.css('font-size', newSize + 'px');
                    }
                });
            }

            // Run on load and resize
            adjustPrices();
            $(window).on('resize', function() {
                // Reset font sizes first
                $('.final-price').css('font-size', '');
                adjustPrices();
            });
        });
    </script>
}