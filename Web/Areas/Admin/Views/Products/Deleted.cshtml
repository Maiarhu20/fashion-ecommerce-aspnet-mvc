@model IEnumerable<Core.DTOs.Products.ProductListDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Deleted Products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header - Responsive -->
    <div class="page-header">
        <h1 class="h3 mb-0 text-gray-800">Deleted Products</h1>
        <a asp-action="Index" class="btn btn-secondary btn-back">
            <i class="fas fa-arrow-left mr-2"></i>
            <span class="btn-text">Back to Active Products</span>
            <span class="btn-icon-only"><i class="fas fa-arrow-left"></i></span>
        </a>
    </div>

    <!-- Products Grid -->
    <div class="row products-grid">
        @foreach (var product in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-6 pb-3">
                <div class="card product-item border-0 mb-2">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        @if (!string.IsNullOrEmpty(product.PrimaryImageUrl))
                        {
                            <img class="img-fluid w-100 h-100" style="object-fit: cover;" src="@product.PrimaryImageUrl" alt="@product.Name">
                        }
                        else
                        {
                            <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light">
                                <i class="fas fa-image fa-2x text-muted"></i>
                            </div>
                        }
                        <div class="position-absolute deleted-badge">
                            <i class="fas fa-trash mr-1"></i>Deleted
                        </div>
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-3 pb-2">
                        <h6 class="product-name text-truncate mb-1" title="@product.Name">@product.Name</h6>
                        <p class="text-muted small mb-2 category-name text-truncate">@(product.CategoryName ?? "Uncategorized")</p>

                        <!-- Price Section -->
                        <div class="price-section mb-2">
                            @if (product.DiscountPercent.HasValue && product.DiscountPercent > 0)
                            {
                                <div class="d-flex flex-column align-items-center">
                                    <div class="final-price text-primary font-weight-bold mb-1">
                                        $@FormatPriceCompact(product.FinalPrice)
                                    </div>
                                    <div class="original-price">
                                        <small class="text-muted">
                                            <del>$@FormatPriceCompact(product.Price)</del>
                                        </small>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="final-price text-primary font-weight-bold">
                                    $@FormatPriceCompact(product.Price)
                                </div>
                            }
                        </div>

                        <!-- Stats -->
                        <div class="stats-section mb-2">
                            <small class="text-muted">
                                <i class="fas fa-box mr-1"></i>@FormatNumberCompact(product.StockQuantity)
                                <span class="stats-separator">|</span>
                                <i class="fas fa-shopping-cart mr-1"></i>@FormatNumberCompact(product.OrderCount)
                            </small>
                        </div>

                        <!-- Colors -->
                        @if (product.Colors != null && product.Colors.Any())
                        {
                            <div class="colors-section mb-2">
                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                    @foreach (var color in product.Colors.Take(3))
                                    {
                                        <span class="color-dot"
                                              style="background-color: @color.ColorHexCode;"
                                              title="@color.ColorName">
                                        </span>
                                    }
                                    @if (product.Colors.Count > 3)
                                    {
                                        <span class="color-more small text-muted" title="@string.Join(", ", product.Colors.Skip(3).Select(c => c.ColorName))">
                                            +@(product.Colors.Count - 3)
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer d-flex justify-content-center bg-light border p-2">
                        <form asp-action="Restore" method="post" class="d-inline w-100">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-sm w-100 btn-restore">
                                <i class="fas fa-trash-restore mr-1 mr-sm-2"></i>
                                <span class="btn-text-full">Restore Product</span>
                                <span class="btn-text-short">Restore</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-trash-alt fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No Deleted Products</h4>
            <p class="text-muted">There are no products in the trash.</p>
            <a asp-action="Index" class="btn btn-primary" style="background-color: #912356; border-color: #912356; color: beige;">
                <i class="fas fa-arrow-left mr-2"></i>Back to Products
            </a>
        </div>
    }
</div>

@functions {
    private string FormatPriceCompact(decimal price)
    {
        if (price >= 1000)
        {
            return price.ToString("N0");
        }
        else if (price >= 100)
        {
            return price.ToString("N1");
        }
        else
        {
            return price.ToString("N2");
        }
    }

    private string FormatNumberCompact(int number)
    {
        if (number >= 1000000)
        {
            return (number / 1000000.0).ToString("0.0") + "M";
        }
        else if (number >= 1000)
        {
            return (number / 1000.0).ToString("0.0") + "K";
        }
        else
        {
            return number.ToString();
        }
    }
}

