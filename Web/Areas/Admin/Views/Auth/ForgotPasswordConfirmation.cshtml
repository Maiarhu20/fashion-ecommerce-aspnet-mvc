@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Password Reset Sent";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #912356 0%, #6a1a42 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 15px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .success-container {
            background: white;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(145, 35, 86, 0.3);
            width: 100%;
            max-width: 450px;
            animation: slideIn 0.5s ease-out;
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .success-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .success-icon {
            font-size: 80px;
            color: #28a745;
            margin-bottom: 20px;
            animation: popIn 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        @@keyframes popIn {
            0%

        {
            transform: scale(0);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }

        }

        .success-header h2 {
            color: #912356;
            font-weight: 600;
            font-size: 28px;
            margin-bottom: 10px;
        }

        .success-header p {
            color: #666;
            font-size: 14px;
        }

        .alert {
            border-radius: 8px;
            border: none;
            margin-bottom: 25px;
            padding: 15px;
            font-size: 14px;
            animation: slideDown 0.3s ease-out;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        @@keyframes slideDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        .alert i {
            font-size: 18px;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .instruction-box {
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 25px;
            font-size: 13px;
            color: #666;
        }

            .instruction-box h5 {
                color: #912356;
                font-weight: 600;
                margin-bottom: 10px;
                font-size: 14px;
            }

            .instruction-box ol {
                margin: 0;
                padding-left: 20px;
            }

            .instruction-box li {
                margin-bottom: 8px;
                line-height: 1.6;
            }

        .timer {
            text-align: center;
            color: #912356;
            font-weight: 600;
            margin: 20px 0;
            font-size: 14px;
        }

            .timer i {
                margin-right: 5px;
            }

        .button-group {
            display: flex;
            gap: 10px;
            flex-direction: column;
            margin-top: 25px;
        }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #912356 0%, #6a1a42 100%);
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(145, 35, 86, 0.3);
                color: white;
                text-decoration: none;
            }

        .btn-secondary {
            background-color: #e9ecef;
            color: #333;
        }

            .btn-secondary:hover {
                background-color: #dee2e6;
                color: #333;
                transform: translateY(-2px);
                text-decoration: none;
            }

        .btn:active {
            transform: translateY(0);
        }

        .resend-link {
            text-align: center;
            margin-top: 15px;
        }

            .resend-link a {
                color: #912356;
                text-decoration: none;
                font-weight: 500;
                font-size: 14px;
                transition: all 0.3s ease;
            }

                .resend-link a:hover {
                    color: #6a1a42;
                    text-decoration: underline;
                }

        /* Mobile responsiveness */
        @@media (max-width: 480px) {
            body

        {
            padding: 10px;
        }

        .success-container {
            padding: 30px 20px;
            border-radius: 12px;
        }

        .success-icon {
            font-size: 60px;
            margin-bottom: 15px;
        }

        .success-header h2 {
            font-size: 24px;
        }

        .success-header p {
            font-size: 13px;
        }

        .alert {
            font-size: 13px;
            padding: 12px;
        }

            .alert i {
                font-size: 16px;
            }

        .instruction-box {
            font-size: 12px;
            padding: 12px;
        }

            .instruction-box h5 {
                font-size: 13px;
            }

            .instruction-box li {
                margin-bottom: 6px;
            }

        .timer {
            font-size: 13px;
        }

        .button-group {
            gap: 8px;
        }

        .btn {
            padding: 11px 15px;
            font-size: 14px;
        }

        .resend-link {
            font-size: 13px;
        }

        }

        @@media (max-width: 320px) {
            .success-container

        {
            padding: 25px 15px;
        }

        .success-icon {
            font-size: 50px;
        }

        .success-header h2 {
            font-size: 22px;
        }

        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-header">
            <div class="success-icon">
                <i class="fas fa-envelope-circle-check"></i>
            </div>
            <h2>Password Reset Sent</h2>
            <p>Check your email for reset instructions</p>
        </div>

        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <div>
                <strong>Success!</strong> If an account with that email exists, we've sent a password reset link to your email address.
            </div>
        </div>

        <div class="instruction-box">
            <h5><i class="fas fa-tasks mr-2"></i>What to do next:</h5>
            <ol>
                <li>Check your email inbox (including spam folder)</li>
                <li>Click the reset password link provided</li>
                <li>Create a new password</li>
                <li>Return to login with your new password</li>
            </ol>
        </div>

        <div class="timer">
            <i class="fas fa-hourglass-half"></i>
            Reset link expires in 24 hours
        </div>

        <div class="button-group">
            <a asp-area="Admin" asp-controller="Auth" asp-action="Login" class="btn btn-primary">
                <i class="fas fa-sign-in-alt"></i>Back to Login
            </a>
            <a asp-area="Admin" asp-controller="Auth" asp-action="ForgotPassword" class="btn btn-secondary">
                <i class="fas fa-redo"></i>Resend Link
            </a>
        </div>

        <div class="resend-link">
            <p>Didn't receive the email? <a href="javascript:void(0);" onclick="document.querySelector('form').submit();">Click here to resend</a></p>
        </div>
    </div>
</body>
</html>