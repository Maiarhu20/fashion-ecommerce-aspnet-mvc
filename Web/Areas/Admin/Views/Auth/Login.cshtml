@model Core.DTOs.Admin.AdminLoginDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Admin Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #912356 0%, #6a1a42 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 15px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            background: white;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(145, 35, 86, 0.3);
            width: 100%;
            max-width: 400px;
            animation: slideIn 0.5s ease-out;
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .login-header {
            text-align: center;
            margin-bottom: 35px;
        }

            .login-header h2 {
                color: #912356;
                font-weight: 600;
                margin-bottom: 5px;
                font-size: 28px;
            }

            .login-header p {
                color: #999;
                font-size: 14px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            color: #333;
            font-weight: 500;
            font-size: 14px;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            border: 2px solid #e0e0e0;
            padding: 12px 15px;
            font-size: 14px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #912356;
                box-shadow: 0 0 0 3px rgba(145, 35, 86, 0.1);
                outline: none;
            }

            .form-control::placeholder {
                color: #bbb;
            }

        /* Password field wrapper */
        .password-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

            .password-wrapper .form-control {
                padding-right: 45px;
                width: 100%;
            }

        .toggle-password-btn {
            position: absolute;
            right: 15px;
            background: none;
            border: none;
            cursor: pointer;
            color: #912356;
            font-size: 16px;
            padding: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .toggle-password-btn:hover {
                color: #6a1a42;
                transform: scale(1.1);
            }

        .form-check {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            margin: 0;
            cursor: pointer;
            border: 2px solid #e0e0e0;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

            .form-check-input:checked {
                background-color: #912356;
                border-color: #912356;
            }

        .form-check-label {
            cursor: pointer;
            color: #666;
            font-size: 14px;
            user-select: none;
            margin: 0;
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #912356 0%, #6a1a42 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(145, 35, 86, 0.3);
            }

            .btn-login:active {
                transform: translateY(0);
            }

            .btn-login:disabled {
                opacity: 0.6;
                cursor: not-allowed;
                transform: none;
            }

        .text-danger {
            color: #dc3545;
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        .alert {
            border-radius: 8px;
            border: none;
            margin-bottom: 25px;
            padding: 12px 15px;
            font-size: 14px;
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

        .divider {
            display: flex;
            align-items: center;
            margin: 25px 0 20px;
            gap: 10px;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                height: 1px;
                background-color: #e0e0e0;
            }

        .divider-text {
            color: #999;
            font-size: 13px;
            font-weight: 500;
        }

        .forgot-password-link {
            display: block;
            text-align: center;
            color: #912356;
            font-weight: 500;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.3s ease;
            margin-top: 15px;
        }

            .forgot-password-link:hover {
                color: #6a1a42;
                text-decoration: underline;
            }

        /* Mobile responsiveness */
        @@media (max-width: 480px) {
            body

        {
            padding: 10px;
        }

        .login-container {
            padding: 30px 20px;
            border-radius: 12px;
        }

        .login-header h2 {
            font-size: 24px;
        }

        .form-control {
            padding: 11px 13px;
            font-size: 16px; /* Prevents zoom on iOS */
        }

        .toggle-password-btn {
            right: 12px;
        }

        .btn-login {
            padding: 11px;
            font-size: 14px;
        }

        .alert {
            font-size: 13px;
            padding: 10px 12px;
        }

        .form-label {
            font-size: 13px;
        }

        .form-check-label {
            font-size: 13px;
        }

        .forgot-password-link {
            font-size: 13px;
        }

        }

        @@media (max-width: 320px) {
            .login-container

        {
            padding: 25px 15px;
        }

        .login-header h2 {
            font-size: 22px;
        }

        .login-header {
            margin-bottom: 25px;
        }

        }

        /* Tablet responsiveness */
        @@media (min-width: 481px) and (max-width: 768px) {
            .login-container

        {
            max-width: 450px;
        }

        }

        /* Input autofill styling */
        .form-control:-webkit-autofill,
        .form-control:-webkit-autofill:hover,
        .form-control:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 30px white inset !important;
            -webkit-text-fill-color: #333 !important;
        }

        /* Accessibility improvements */
        .form-control:invalid {
            border-color: #dc3545;
        }

        .form-control:valid {
            border-color: #28a745;
        }

        /* Loading state */
        .btn-login.loading {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
            margin-right: 0.5rem;
        }

        /* Icon color matching primary color */
        .form-label i {
            color: #912356 !important;
        }

        .login-header i {
            color: #912356 !important;
        }

        .forgot-password-link i {
            color: #912356;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h2>
                <i class="fas fa-lock-open"></i>Admin Login
            </h2>
            <p>Secure access to your dashboard</p>
        </div>

        <form asp-area="Admin" asp-controller="Auth" asp-action="Login" method="post" id="loginForm" novalidate>
            @Html.AntiForgeryToken()

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle mr-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    @TempData["ErrorMessage"]
                </div>
            }

            <!-- Username/Email Field -->
            <div class="form-group">
                <label asp-for="Username" class="form-label">
                    <i class="fas fa-user"></i>Username or Email
                </label>
                <input asp-for="Username"
                       class="form-control"
                       placeholder="Enter your username or email"
                       autocomplete="username"
                       required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class="fas fa-lock"></i>Password
                </label>
                <div class="password-wrapper">
                    <input asp-for="Password"
                           type="password"
                           class="form-control"
                           placeholder="Enter your password"
                           autocomplete="current-password"
                           id="passwordInput"
                           required />
                    <button type="button"
                            class="toggle-password-btn"
                            id="togglePasswordBtn"
                            aria-label="Toggle password visibility">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me Checkbox -->
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="RememberMe"
                           class="form-check-input"
                           type="checkbox"
                           value="true"
                           id="rememberMeCheckbox" />
                    <input type="hidden" name="RememberMe" value="false" />
                    <label class="form-check-label" for="rememberMeCheckbox">
                        Remember me for 30 days
                    </label>
                </div>
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-login" id="loginBtn">
                <i class="fas fa-sign-in-alt mr-2"></i>Login
            </button>
        </form>

        <!-- Forgot Password Link -->
        <div class="divider">
            <span class="divider-text">Need help?</span>
        </div>
        <a asp-area="Admin"
           asp-controller="Auth"
           asp-action="ForgotPassword"
           class="forgot-password-link">
            <i class="fas fa-key mr-1"></i>Forgot Password?
        </a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            // Toggle Password Visibility
            const togglePasswordBtn = $('#togglePasswordBtn');
            const passwordInput = $('#passwordInput');

            togglePasswordBtn.on('click', function(e) {
                e.preventDefault();
                const isPassword = passwordInput.attr('type') === 'password';

                if (isPassword) {
                    passwordInput.attr('type', 'text');
                    togglePasswordBtn.html('<i class="fas fa-eye-slash"></i>');
                    togglePasswordBtn.attr('aria-label', 'Hide password');
                } else {
                    passwordInput.attr('type', 'password');
                    togglePasswordBtn.html('<i class="fas fa-eye"></i>');
                    togglePasswordBtn.attr('aria-label', 'Show password');
                }
            });

            // Keyboard shortcut to toggle password (Ctrl+Shift+P)
            $(document).on('keydown', function(e) {
                if (e.ctrlKey && e.shiftKey && e.key === 'P') {
                    e.preventDefault();
                    togglePasswordBtn.click();
                }
            });

            // Form submission loading state
            $('#loginForm').on('submit', function() {
                const btn = $('#loginBtn');
                btn.prop('disabled', true).addClass('loading');
                btn.html('<i class="fas fa-spinner fa-spin mr-2"></i>Logging in...');
            });

            // Show/Hide alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Focus management
            $('#Username').focus();
        });
    </script>
</body>
</html>