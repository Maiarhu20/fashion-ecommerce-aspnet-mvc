@model Core.DTOs.Admin.ForgotPassword
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #912356 0%, #6a1a42 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 15px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .forgot-password-container {
            background: white;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(145, 35, 86, 0.3);
            width: 100%;
            max-width: 400px;
            animation: slideIn 0.5s ease-out;
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .forgot-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .forgot-icon {
            font-size: 50px;
            color: #912356;
            margin-bottom: 15px;
        }

        .forgot-header h2 {
            color: #912356;
            font-weight: 600;
            font-size: 28px;
            margin-bottom: 10px;
        }

        .forgot-header p {
            color: #666;
            font-size: 14px;
            line-height: 1.6;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            color: #333;
            font-weight: 500;
            font-size: 14px;
            margin-bottom: 8px;
            display: block;
        }

            .form-label i {
                color: #912356;
                margin-right: 8px;
            }

        .form-control {
            border: 2px solid #e0e0e0;
            padding: 12px 15px;
            font-size: 14px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #912356;
                box-shadow: 0 0 0 3px rgba(145, 35, 86, 0.1);
                outline: none;
            }

            .form-control::placeholder {
                color: #bbb;
            }

        .text-danger {
            color: #dc3545;
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        .alert {
            border-radius: 8px;
            border: none;
            margin-bottom: 20px;
            padding: 12px 15px;
            font-size: 14px;
            animation: slideDown 0.3s ease-out;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        @@keyframes slideDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

        .alert i {
            font-size: 18px;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .btn-send {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, #912356 0%, #6a1a42 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .btn-send:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(145, 35, 86, 0.3);
            }

            .btn-send:active {
                transform: translateY(0);
            }

            .btn-send:disabled {
                opacity: 0.6;
                cursor: not-allowed;
                transform: none;
            }

        .divider {
            display: flex;
            align-items: center;
            margin: 25px 0 20px;
            gap: 10px;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                height: 1px;
                background-color: #e0e0e0;
            }

        .divider-text {
            color: #999;
            font-size: 13px;
            font-weight: 500;
        }

        .back-to-login {
            display: block;
            text-align: center;
            color: #912356;
            font-weight: 500;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.3s ease;
            margin-top: 15px;
        }

            .back-to-login:hover {
                color: #6a1a42;
                text-decoration: underline;
            }

        .info-box {
            background-color: #f8f9fa;
            border-left: 4px solid #912356;
            padding: 12px;
            border-radius: 8px;
            margin-top: 20px;
            font-size: 12px;
            color: #666;
            line-height: 1.6;
        }

            .info-box i {
                color: #912356;
                margin-right: 8px;
            }

        /* Mobile responsiveness */
        @@media (max-width: 480px) {
            body

        {
            padding: 10px;
        }

        .forgot-password-container {
            padding: 30px 20px;
            border-radius: 12px;
        }

        .forgot-icon {
            font-size: 40px;
            margin-bottom: 12px;
        }

        .forgot-header h2 {
            font-size: 24px;
        }

        .forgot-header p {
            font-size: 13px;
        }

        .form-control {
            padding: 11px 13px;
            font-size: 16px; /* Prevents zoom on iOS */
        }

        .alert {
            font-size: 13px;
            padding: 10px 12px;
        }

            .alert i {
                font-size: 16px;
            }

        .form-label {
            font-size: 13px;
        }

        .btn-send {
            padding: 11px;
            font-size: 14px;
        }

        .back-to-login {
            font-size: 13px;
        }

        .info-box {
            font-size: 11px;
            padding: 10px;
        }

        }

        @@media (max-width: 320px) {
            .forgot-password-container

        {
            padding: 25px 15px;
        }

        .forgot-icon {
            font-size: 35px;
        }

        .forgot-header h2 {
            font-size: 22px;
        }

        }

        /* Input autofill styling */
        .form-control:-webkit-autofill,
        .form-control:-webkit-autofill:hover,
        .form-control:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 30px white inset !important;
            -webkit-text-fill-color: #333 !important;
        }
    </style>
</head>
<body>
    <div class="forgot-password-container">
        <div class="forgot-header">
            <div class="forgot-icon">
                <i class="fas fa-key"></i>
            </div>
            <h2>Forgot Password?</h2>
            <p>No worries! Enter your email address and we'll send you a link to reset your password.</p>
        </div>

        <form asp-area="Admin" asp-controller="Auth" asp-action="ForgotPassword" method="post" id="forgotPasswordForm" novalidate>
            @Html.AntiForgeryToken()

            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i>
                    <div>@TempData["SuccessMessage"]</div>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>@TempData["ErrorMessage"]</div>
                </div>
            }

            <!-- Email Field -->
            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope"></i>Email Address
                </label>
                <input asp-for="Email"
                       class="form-control"
                       placeholder="Enter your registered email"
                       autocomplete="email"
                       required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-send" id="sendBtn">
                <i class="fas fa-paper-plane mr-2"></i>Send Reset Link
            </button>

            <!-- Info Box -->
            <div class="info-box">
                <i class="fas fa-info-circle"></i>
                <strong>Tip:</strong> Check your spam or promotions folder if you don't see the email within a few minutes.
            </div>
        </form>

        <!-- Divider -->
        <div class="divider">
            <span class="divider-text">Remember your password?</span>
        </div>

        <!-- Back to Login Link -->
        <a asp-area="Admin" asp-controller="Auth" asp-action="Login" class="back-to-login">
            <i class="fas fa-sign-in-alt mr-1"></i>Back to Login
        </a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            // Form submission loading state
            $('#forgotPasswordForm').on('submit', function() {
                const btn = $('#sendBtn');
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-2"></i>Sending...');
            });

            // Show/Hide alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Focus management
            $('#Email').focus();
        });
    </script>
</body>
</html>