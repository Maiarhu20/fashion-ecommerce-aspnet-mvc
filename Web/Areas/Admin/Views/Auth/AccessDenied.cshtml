@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #912356 0%, #6a1a42 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 15px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .access-denied-container {
            background: white;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(145, 35, 86, 0.3);
            width: 100%;
            max-width: 450px;
            animation: slideIn 0.5s ease-out;
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .denied-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .denied-icon {
            font-size: 80px;
            color: #dc3545;
            margin-bottom: 20px;
            animation: shake 0.6s ease-in-out;
        }

        @@keyframes shake {
            0%, 100%

        {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-10px);
        }

        75% {
            transform: translateX(10px);
        }

        }

        .denied-header h2 {
            color: #912356;
            font-weight: 600;
            font-size: 28px;
            margin-bottom: 10px;
        }

        .denied-header p {
            color: #666;
            font-size: 14px;
        }

        .alert {
            border-radius: 8px;
            border: none;
            margin-bottom: 25px;
            padding: 15px;
            font-size: 14px;
            animation: slideDown 0.3s ease-out;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        @@keyframes slideDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .alert-danger {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

        .alert i {
            font-size: 18px;
            flex-shrink: 0;
        }

        .button-group {
            display: flex;
            gap: 10px;
            flex-direction: column;
            margin-top: 25px;
        }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #912356 0%, #6a1a42 100%);
            color: white;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(145, 35, 86, 0.3);
                color: white;
                text-decoration: none;
            }

        .btn-secondary {
            background-color: #e9ecef;
            color: #333;
        }

            .btn-secondary:hover {
                background-color: #dee2e6;
                color: #333;
                transform: translateY(-2px);
                text-decoration: none;
            }

        .btn:active {
            transform: translateY(0);
        }

        .info-box {
            background-color: #f8f9fa;
            border-left: 4px solid #912356;
            padding: 15px;
            border-radius: 8px;
            margin-top: 20px;
            font-size: 13px;
            color: #666;
        }

            .info-box i {
                color: #912356;
                margin-right: 8px;
            }

        /* Mobile responsiveness */
        @@media (max-width: 480px) {
            body

        {
            padding: 10px;
        }

        .access-denied-container {
            padding: 30px 20px;
            border-radius: 12px;
        }

        .denied-icon {
            font-size: 60px;
            margin-bottom: 15px;
        }

        .denied-header h2 {
            font-size: 24px;
        }

        .denied-header p {
            font-size: 13px;
        }

        .alert {
            font-size: 13px;
            padding: 12px;
        }

            .alert i {
                font-size: 16px;
            }

        .button-group {
            gap: 8px;
        }

        .btn {
            padding: 11px 15px;
            font-size: 14px;
        }

        .info-box {
            font-size: 12px;
            padding: 12px;
        }

        }

        @@media (max-width: 320px) {
            .access-denied-container

        {
            padding: 25px 15px;
        }

        .denied-icon {
            font-size: 50px;
        }

        .denied-header h2 {
            font-size: 22px;
        }

        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="denied-header">
            <div class="denied-icon">
                <i class="fas fa-lock"></i>
            </div>
            <h2>Access Denied</h2>
            <p>You don't have permission to access this resource</p>
        </div>

        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                <strong>Unauthorized Access:</strong> This area is restricted to administrators only. If you believe this is an error, please contact support.
            </div>
        </div>

        <div class="info-box">
            <i class="fas fa-info-circle"></i>
            <strong>What can you do?</strong> Return to login and verify your credentials, or contact your administrator for access.
        </div>

        <div class="button-group">
            <a asp-area="Admin" asp-controller="Auth" asp-action="Login" class="btn btn-primary">
                <i class="fas fa-sign-in-alt"></i>Go to Login
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="fas fa-home"></i>Go to Homepage
            </a>
        </div>
    </div>
</body>
</html>