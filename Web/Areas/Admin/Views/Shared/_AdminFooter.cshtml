                    <img src="~/images/logoLabella1.png" alt="La Bella Admin" style="height: 60px; filter: brightness(0) invert(1);">
                </div>
                <p class="mb-3" style="color: rgba(255,255,255,0.8); font-size: 14px;">
                    <strong>Admin Dashboard</strong> - Manage your store, products, orders, and customers efficiently.
                </p>
                <div class="admin-stats d-flex flex-wrap">
                    <div class="mr-4 mb-2">
                        <small style="color: rgba(255,255,255,0.7);">User:</small><br>
                        <span style="color: white; font-weight: 500;">
                            @{
                                var user = await UserManager.GetUserAsync(User);
                                var displayName = user?.Name ?? User.Identity?.Name ?? "Administrator";
                                @displayName
                            }
                        </span>
                    </div>
                    <div class="mb-2">
                        <small style="color: rgba(255,255,255,0.7);">Role:</small><br>
                        <span style="color: white; font-weight: 500;">Administrator</span>
                    </div>
                </div>
            </div>

            <!-- Quick Admin Links -->
            <div class="col-lg-2 col-md-6 mb-4">
                <h6 class="font-weight-bold mb-3" style="color: white;">Admin Tools</h6>
                <ul class="list-unstyled" style="font-size: 14px;">
                    <li class="mb-2">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-white-50" style="text-decoration: none;">
                            <i class="fas fa-tachometer-alt mr-2" style="color: @lightColor; font-size: 12px;"></i>Dashboard
                        </a>
                    </li>
                    <li class="mb-2">
                        <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="text-white-50" style="text-decoration: none;">
                            <i class="fas fa-shopping-bag mr-2" style="color: @lightColor; font-size: 12px;"></i>Orders
                        </a>
                    </li>
                    <li class="mb-2">
                        <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="text-white-50" style="text-decoration: none;">
                            <i class="fas fa-box-open mr-2" style="color: @lightColor; font-size: 12px;"></i>Products
                        </a>
                    </li>
                    <li class="mb-2">
                        <a asp-area="Admin" asp-controller="Auth" asp-action="ChangePassword" class="text-white-50" style="text-decoration: none;">
                            <i class="fas fa-key mr-2" style="color: @lightColor; font-size: 12px;"></i>Change Password
                        </a>
                    </li>
                </ul>
            </div>

            <!-- System Info -->
            <div class="col-lg-3 col-md-6 mb-4">
                <h6 class="font-weight-bold mb-3" style="color: white;">System</h6>
                <div class="system-info">
