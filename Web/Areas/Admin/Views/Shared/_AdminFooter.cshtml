<style>
    .footer {
        font-family: 'Poppins', sans-serif;
        position: relative;
        bottom: 0;
        width: 100%;
    }

        .footer a {
            transition: all 0.3s ease;
        }

            .footer a:hover {
                color: #f9e8e9 !important;
                text-decoration: underline !important;
                transform: translateX(3px);
            }

        /* FIXED: More specific selector for buttons */
        .footer .btn-outline-light {
            border-color: white !important;
            color: white !important;
        }

            .footer .btn-outline-light:hover {
                background-color: #f9e8e9 !important;
                color: #912356 !important;
                border-color: #f9e8e9 !important;
            }

        .footer .btn-light {
            background-color: #f9e8e9 !important;
            color: #912356 !important;
            border: none !important;
        }

            .footer .btn-light:hover {
                background-color: white !important;
                color: #912356 !important;
            }

    .admin-stats {
        background-color: rgba(255, 255, 255, 0.1);
        padding: 10px;
        border-radius: 5px;
        font-size: 13px;
    }

    .system-info .icon {
        flex-shrink: 0;
    }

    .quick-actions .btn {
        transition: all 0.3s ease;
    }

        .quick-actions .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2) !important;
        }

    #sessionTimer {
        color: #f9e8e9;
        font-weight: bold;
        font-family: monospace;
    }

    /* Responsive Styles */
    @@media (max-width: 768px) {
        .footer .col-md-6 {
            text-align: center !important;
        }

        .admin-stats {
            justify-content: center;
        }

        .system-info .d-flex {
            justify-content: center;
        }

        .quick-actions {
            text-align: center;
        }

            .quick-actions .btn {
                max-width: 250px;
                margin-left: auto;
                margin-right: auto;
            }
    }

    @@media (max-width: 576px) {
        .footer {
            text-align: center;
        }

        .footer-logo {
            text-align: center;
        }

        .list-unstyled {
            padding-left: 0;
        }
    }
</style>

<script>
    // Session timer for admin footer
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize session timer (30 minutes = 1800 seconds)
        let sessionTime = 1800;
        const sessionTimerElement = document.getElementById('sessionTimer');

        if (sessionTimerElement) {
            const updateTimer = () => {
                const minutes = Math.floor(sessionTime / 60);
                const seconds = sessionTime % 60;
                sessionTimerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

                if (sessionTime <= 300) { // Last 5 minutes
                    sessionTimerElement.style.color = '#ffc107'; // Yellow warning
                }

                if (sessionTime <= 60) { // Last minute
                    sessionTimerElement.style.color = '#dc3545'; // Red warning
                }

                if (sessionTime <= 0) {
                    clearInterval(timerInterval);
                    sessionTimerElement.textContent = '00:00';
                    // Optional: Show logout warning
                    showSessionWarning();
                } else {
                    sessionTime--;
                }
            };

            const timerInterval = setInterval(updateTimer, 1000);
            updateTimer(); // Initial call
        }

        // Footer logout confirmation
        const footerLogoutForm = document.getElementById('footerLogoutForm');
        if (footerLogoutForm) {
            footerLogoutForm.addEventListener('submit', function(e) {
                if (!confirm('Are you sure you want to logout?')) {
                    e.preventDefault();
                }
            });
        }

        // Session warning function
        function showSessionWarning() {
            const warningHtml = `
                <div class="alert alert-warning alert-dismissible fade show position-fixed"
                     style="bottom: 20px; right: 20px; z-index: 9999; max-width: 300px;">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong><i class="fas fa-exclamation-triangle mr-2"></i>Session Expired</strong><br>
                    Your session has expired. Please login again.
                </div>
            `;

            // Remove any existing warning
            const existingWarning = document.querySelector('.alert-warning.position-fixed');
            if (existingWarning) {
                existingWarning.remove();
            }

            document.body.insertAdjacentHTML('beforeend', warningHtml);
        }

        // Reset timer on user activity
        const resetTimer = () => {
            sessionTime = 1800; // Reset to 30 minutes
        };

        // Add event listeners to reset timer on user activity
        ['mousemove', 'keypress', 'click', 'scroll'].forEach(event => {
            document.addEventListener(event, resetTimer);
        });
    });
</script>